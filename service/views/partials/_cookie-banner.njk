{% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}

{% set html %}
    <p class="govuk-body">We use some essential cookies to make this service work.</p>
    <p class="govuk-body">Weâ€™d also like to use analytics cookies so we can understand how you use the service and make
        improvements.</p>
{% endset %}

{% set acceptHtml %}
    <p class="govuk-body">You've accepted additional cookies. You can <a class="govuk-link" href="/cookie-policy">change
            your cookie
            settings</a> at any time.</p>
{% endset %}

{% set rejectHtml %}
    <p class="govuk-body">You've rejected additional cookies. You can <a class="govuk-link" href="/cookie-policy">change
            your cookie
            settings</a> at any time.</p>
{% endset %}

{{ govukCookieBanner({
    id: "cookie-banner",
    hidden: false,
    ariaLabel: "Cookies on " + serviceName,
    messages: [
        {
            headingText: "Cookies on " + serviceName,
            hidden: false,
            html: html,
            attributes: {
            "id": "cookie-banner-message"
        },
            actions: [
            {
                text: "Accept analytics cookies",
                type: "button",
                name: "cookies",
                value: "accept"
            },
            {
                text: "Reject analytics cookies",
                type: "button",
                name: "cookies",
                value: "reject"
            },
            {
                text: "View cookies",
                href: "/cookie-policy"
            }
        ]
        }, {
            html: acceptHtml,
            role: "alert",
            hidden: true,
            attributes: {
                "id": "cookie-banner-accept"
            },
            actions: [
                {
                    text: "Hide cookie message",
                    type: "button",
                    name: "cookies",
                    value: "hide"
                }
            ]
        }, {
            html: rejectHtml,
            role: "alert",
            hidden: true,
            attributes: {
                "id": "cookie-banner-reject"
            },
            actions: [
                {
                    text: "Hide cookie message",
                    type: "button",
                    name: "cookies",
                    value: "hide"
                }
            ]
        }
    ]
}) }}
